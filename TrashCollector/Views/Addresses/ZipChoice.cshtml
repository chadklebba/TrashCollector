@model TrashCollector.Models.TrashCollection.Address

@{
    ViewBag.Title = "ZipChoice";
}
<h2>Choose a Zip Code</h2>

@using (Html.BeginForm("ZipChoice", "Addresses", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.TextBoxFor(z => z.ZipCode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}
